<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trello Clone - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .board-card {
            cursor: pointer;
            transition: transform 0.2s;
        }
        .board-card:hover {
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div id="app">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/">Trello Clone</a>
                <button class="btn btn-light" onclick="createBoard()">Create Board</button>
            </div>
        </nav>

        <div class="container mt-4">
            <h1>My Boards</h1>
            <div id="boards-container" class="row">
                <!-- Boards will be loaded here -->
            </div>
        </div>
    </div>

    <!-- Create Board Modal -->
    <div class="modal fade" id="createBoardModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Board</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="createBoardForm">
                        <div class="mb-3">
                            <label for="boardTitle" class="form-label">Board Title</label>
                            <input type="text" class="form-control" id="boardTitle" required>
                        </div>
                        <div class="mb-3">
                            <label for="boardDescription" class="form-label">Description (optional)</label>
                            <textarea class="form-control" id="boardDescription" rows="3"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitCreateBoard()">Create</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let boards = [];

        async function loadBoards() {
            try {
                const response = await fetch('/api/boards');
                boards = await response.json();
                renderBoards();
            } catch (error) {
                console.error('Failed to load boards:', error);
            }
        }

        function renderBoards() {
            const container = document.getElementById('boards-container');
            container.innerHTML = boards.map(board => `
                <div class="col-md-4 mb-4">
                    <div class="card board-card" onclick="viewBoard(${board.id})">
                        <div class="card-body">
                            <h5 class="card-title">${board.title}</h5>
                            ${board.description ? `<p class="card-text">${board.description}</p>` : ''}
                            <small class="text-muted">Created ${new Date(board.createdAt).toLocaleDateString()}</small>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function createBoard() {
            const modal = new bootstrap.Modal(document.getElementById('createBoardModal'));
            modal.show();
        }

        async function submitCreateBoard() {
            const title = document.getElementById('boardTitle').value;
            const description = document.getElementById('boardDescription').value;

            if (!title.trim()) return;

            try {
                const response = await fetch('/api/boards', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ title, description })
                });

                if (response.ok) {
                    bootstrap.Modal.getInstance(document.getElementById('createBoardModal')).hide();
                    document.getElementById('createBoardForm').reset();
                    loadBoards();
                }
            } catch (error) {
                console.error('Failed to create board:', error);
            }
        }

        function viewBoard(boardId) {
            window.location.href = `/boards/${boardId}`;
        }

        // Load boards on page load
        loadBoards();
    </script>
</body>
</html>